---
title: Custom Pages
content_type: custompages
---
{% extends 'index' %}


{% block hero %}
	{% if custompage.has_header %}
	{% include "centered-hero" with custompage.header_photo, custompage.title %}
	{% endif %}
{% endblock %} 


{% block main %}
	<!-- Information Blob -->
	{% if custompage.has_informational_blob %}
	<div class="section {{ cycle 'alt', '' }}">
		<div class="row">
			<div class="small-10 columns small-centered end">
				<h3 class="text-center subsection">{{ custompage.informational_headline }}</h3>
				<div class="radius text-center text-large">{{ custompage.informational_paragraph }}</div>
			</div>
		</div>
	</div>
	{% endif %}

	<!-- Three Column -->
	{% if custompage.has_three_column %}
	<div class="section {{ cycle 'alt', '' }}">
		<div class="row text-center">
			{% for i in (1..3) %}
			{% case i %}
				{% when 1 %}
					{% assign url = custompage.three_col_one_url %}
					{% assign image =  custompage.three_col_one_image.url %}
					{% assign headline =  custompage.three_col_one_headline %}
					{% assign body =  custompage.three_col_one_body %}

				{% when 2 %}
					{% assign url = custompage.three_col_two_url %}
					{% assign image =  custompage.three_col_two_image.url %}
					{% assign headline =  custompage.three_col_two_headline %}
					{% assign body =  custompage.three_col_two_body %}

				{% when 3 %}
					{% assign url = custompage.three_col_three_url %}
					{% assign image =  custompage.three_col_three_image.url %}
					{% assign headline =  custompage.three_col_three_headline %}
					{% assign body =  custompage.three_col_three_body %}
			{% endcase %}

			<div class="small-12 medium-6 large-4 columns">
				<a href="{{ url | default: '#' }}"><img class="th box-shadow-subtle" src="{{ image | resize: '388x260#'}}" /></a>
				<a href="{{ url | default: '#' }}"><h4>{{ headline }}</h4></a>
				<div>{{ body }}</div>
			</div>
			{% endfor %}
		</div>
	</div>
	{% endif %}

	<!-- Four Column -->
	{% if custompage.has_four_column %}
	<div class="section {{ cycle 'alt', '' }}">
		<div class="row text-center">
			{% for i in (1..4) %}
			{% case i %}
				{% when 1 %}
					{% assign url = custompage.four_col_one_url %}
					{% assign image =  custompage.four_col_one_image.url %}
					{% assign headline =  custompage.four_col_one_headline %}
					{% assign body =  custompage.four_col_one_body %}

				{% when 2 %}
					{% assign url = custompage.four_col_two_url %}
					{% assign image =  custompage.four_col_two_image.url %}
					{% assign headline =  custompage.four_col_two_headline %}
					{% assign body =  custompage.four_col_two_body %}

				{% when 3 %}
					{% assign url = custompage.four_col_three_url %}
					{% assign image =  custompage.four_col_three_image.url %}
					{% assign headline =  custompage.four_col_three_headline %}
					{% assign body =  custompage.four_col_three_body %}

				{% when 4 %}
					{% assign url = custompage.four_col_four_url %}
					{% assign image =  custompage.four_col_four_image.url %}
					{% assign headline =  custompage.four_col_four_headline %}
					{% assign body =  custompage.four_col_four_body %}
			{% endcase %}

			<div class="small-12 medium-6 large-3 columns">
				<a href="{{ url | default: '#' }}"><img class="th box-shadow-subtle" src="{{ image | resize: '200x200#'}}" /></a>
				<a href="{{ url | default: '#' }}"><h4>{{ headline }}</h4></a>
				<div>{{ body }}</div>
			</div>
			{% endfor %}
		</div>
	</div>
	{% endif %}


	<!-- Free-form HTML Block -->
	{% if custompage.has_three_column %}
	<div class="section {{ cycle 'alt', '' }}">
		<div class="row">{{ custompage.free_form_html_block }}</div>
	</div>
	{% endif %}
{% endblock %}
