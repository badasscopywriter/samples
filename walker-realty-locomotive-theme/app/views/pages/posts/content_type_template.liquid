---
title: Blog Post template page
content_type: posts
---
{% extends 'blog' %}

{% block main/blog_content %}
	<div class="row">
		<div class="small-12 columns">
			<div class="left date" style="min-width: 150px; margin-top: 20px; margin-right: 20px; margin-bottom: 20px;">
				<span class="day"  >{{ post.date | date: "%d" }}</span>
				<div class="clearfix">
					<span class="month">{{ post.date | date: "%b" }}</span>
					<span class="year" >{{ post.date | date: "%Y" }}</span>
				</div>
			</div>
			<h1>{{ post.headline }}</h1>
		</div>
		<hr />
	</div>
	<div class="row" style="padding: 20px;">
		{{ post.body }}
	</div>
	<div class="row">
		<hr />
		<span><span class="author">{{ post.author.name }}</span> | {{ post.author.phone }} | {{ post.author.email }}</span>
	</div>
	
{% endblock %}
